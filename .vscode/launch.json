    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${fileDirname}",
            "env": {
                "FLASK_APP": "application.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "FLASK_APP": "application.py",
                "AZAPPID": "03da7a9b-63cd-4e42-9c26-9ffa4b4c65cb",
                "AZTENANTID": "9885457a-2026-4e2c-a47e-32ff52ea0b8d"
            },
            "args": [
                ""
            ],
        },        
    ]
}